<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <Button
        android:id="@+id/mainActivityBtn"
        android:layout_margin="15dp"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="Back" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/image"
        android:layout_marginLeft="125dp"
        android:layout_marginTop="70dp"/>
    <SeekBar
        android:id="@+id/positionBar"
        android:layout_width="300dp"
        android:layout_height="31dp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="70dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        <TextView
            android:id="@+id/elapsedTimeLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0:11"
            android:layout_marginLeft="40dp"/>

        <TextView
            android:id="@+id/remainingTimeLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-1:11"
            android:layout_marginLeft="240dp"/>
    </LinearLayout>

    <SeekBar
        android:id="@+id/positionBar1"
        android:layout_width="300dp"
        android:layout_height="31dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="70dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        <TextView
            android:id="@+id/elapsedTimeLabel1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0:11"
            android:layout_marginLeft="40dp"/>

        <TextView
            android:id="@+id/remainingTimeLabel1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-1:11"
            android:layout_marginLeft="240dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal">


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center">


        <Button
            android:id="@+id/addSong1"
            android:layout_margin="30dp"
            android:layout_width="120dp"
            android:layout_height="70dp"
            android:text="Download song 1" />

        <Button
            android:id="@+id/addSong2"
            android:layout_width="120dp"
            android:layout_height="70dp"
            android:layout_margin="30dp"
            android:text="Download song 2" />



    </LinearLayout>


</LinearLayout>